@page "{id}"
@model ServiceHost.Pages.ArticleModel
@{
    ViewData["Title"] = Model.Article.Title;
    ViewData["keywords"] = Model.Article.Keywords;
    ViewData["metaDescription"] = Model.Article.MetaDescription;
}

<section class="blog pt-0">

    <!--Header-->

    <header>
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">خانه</a></li>
                <li class="breadcrumb-item"><a asp-page="/ArticleCategory" asp-route-id="@Model.Article.CategorySlug">@Model.Article.CategoryName</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Article.Title</li>
            </ol>
            <h1 class="title">@Model.Article.Title</h1>
        </div>
    </header>



    <!--Blog content-->

    <div class="container">

        <div class="row">

            <div class="col-lg-9">

                <!--Blog post-->

                <div class="blog-post">


                    <!--Blog content-->

                    <div class="blog-post-content pt-0">

                        <!--Title-->

                        <div class="blog-post-title">

                            <!--<h1 class="h1 blog-title">
                                In Virtual Reality, How Much <br />Body Do You Need?
                            </h1>-->

                            <h2 class="blog-subtitle h5">
                                @Model.Article.ShortDescription
                            </h2>

                            <hr />

                            <!--Info-->

                            <div class="blog-info">
                                <div class="entry">
                                    <i class="fa fa-calendar"></i>
                                    <span>@Model.Article.PublishDate</span>
                                </div>
                                <div class="entry">
                                    <i class="fa fa-comments"></i>
                                    @if (Model.Article != null)
                                    {
                                        <span>@Model.Article.Comments.Count نظر </span>
                                    }

                                </div>
                            </div>

                            <hr />

                        </div>

                        <!--Main image-->

                        <div class="blog-image-main">
                            <img src="~/ProductPictures/@Model.Article.Picture" alt="@Model.Article.PictureAlt" title="@Model.Article.PictureTitle" />
                        </div>


                        <!--Blog text-->

                        <div class="blog-post-text">
                            @Html.Raw(Model.Article.Description)
                        </div>
                        <!--Blog footer info-->

                        <div class="blog-info blog-info-bottom">

                            <ul>
                                <li>
                                    <i class="fa fa-tag"></i>
                                    <span>
                                        @foreach (var tag in Model.Article.KeywordList)
                                        {
                                            <a asp-page="/Search" asp-route-searchModel="@tag">@tag،</a>
                                        }
                                    </span>
                                </li>
                            </ul>

                        </div> <!--/blog-info-->

                    </div> <!--/blog-post-content-->

                </div><!--blog-post-->

                <div class="comments">

                    <div class="comment-header">
                        <div class="h3 m-0">نظرات اخیر</div>
                        <span>@Model.Article.Comments.Count @Model.Article.Title</span>
                    </div>

                    <div class="comment-wrapper">

                        <!--Comment-->

                        <div class="comment-block">

                            <!--Comment user-->
                            <!--<div class="comment-user">
                                <div>
                                    <img src="~/Theme/assets/images/user.jpg" alt="Alternate Text" width="70" />
                                </div>
                                <div>
                                    <h5>
                                        <span>جان دو</span>
                                        <span class="pull-right">
                                            <i class="fa fa-star active"></i>
